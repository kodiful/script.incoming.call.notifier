<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.incoming.call.notifier"
       name="Incoming Call Notifier"
       version="2.1.2"
       provider-name="kodiful">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.beautifulsoup4" version="4.3.1"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="service.py"/>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Incoming Call Notifier</summary>
    <summary lang="ja">着信通知</summary>
    <description lang="en">Notify incoming call to IP phone</description>
    <description lang="ja">IP電話への着信を通知します</description>
    <disclaimer lang="en">Tested on macOS</disclaimer>
    <disclaimer lang="ja">macOSで動作検証しています</disclaimer>
    <website>http://kodiful.com/</website>
  </extension>
</addon>
